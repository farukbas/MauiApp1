<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.MainPage">

    <VerticalStackLayout Spacing="10" Padding="20">

        <Button x:Name="StreamNotificationsBtn" 
                Text="Bildirimleri İzle (Parametresiz)" 
                Clicked="StreamNotificationsBtn_Clicked" />

        <HorizontalStackLayout Spacing="10">
            <Entry x:Name="ContentEntry" 
                   Placeholder="Gönderilecek metin..." 
                   HorizontalOptions="FillAndExpand" />
            <Button x:Name="StreamContentBtn" 
                    Text="İzle (Parametreli)" 
                    Clicked="StreamContentBtn_Clicked" />
        </HorizontalStackLayout>

        <Label Text="Gelen Son 10 Değer:" 
               FontSize="Medium" 
               FontAttributes="Bold" 
               Margin="0,20,0,0"/>

        <BoxView HeightRequest="1" Color="Gray" Margin="0,15"/>

        <Label Text="Listeden Değer Sil:" FontAttributes="Bold"/>
        <HorizontalStackLayout Spacing="10">
            <Entry x:Name="IndexEntry" 
                   Placeholder="Index (0-9)" 
                   Keyboard="Numeric" 
                   MaxLength="1"
                   TextChanged="IndexEntry_TextChanged" HorizontalOptions="FillAndExpand" />
            <Button x:Name="CutBtn" 
                    Text="Kes" 
                    Clicked="CutBtn_Clicked" />
        </HorizontalStackLayout>

        <ListView x:Name="NotificationsListView" />

    </VerticalStackLayout>

</ContentPage>